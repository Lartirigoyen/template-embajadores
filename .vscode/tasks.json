{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Dev: Iniciar proyecto",
        "type": "shell",
        "command": "if (-not (Test-Path node_modules)) { npm install }; npm run dev",
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "isBackground": true,
        "problemMatcher": {
          "owner": "typescript",
          "pattern": { "regexp": "^$" },
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".",
            "endsPattern": "Ready|started|compiled|Local:|✓"
          }
        },
        "runOptions": {
          "runOn": "folderOpen"
        },
        "presentation": {
          "reveal": "always",
          "panel": "dedicated",
          "showReuseMessage": false,
          "clear": true
        },
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label": "Dev: Solo Next.js (rápido)",
        "type": "shell",
        "command": "npx next dev",
        "options": { "cwd": "${workspaceFolder}" },
        "isBackground": true,
        "problemMatcher": {
          "owner": "typescript",
          "pattern": { "regexp": "^$" },
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".",
            "endsPattern": "Ready|started|compiled|Local:|✓"
          }
        },
        "presentation": {
          "reveal": "always",
          "panel": "dedicated"
        }
      }
    ]
  }
  