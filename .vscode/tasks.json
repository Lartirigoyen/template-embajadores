{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build & Run",
        "type": "shell",
        "command": "npm install; npm run dev",
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "isBackground": true,
        "problemMatcher": {
          "owner": "typescript",
          "pattern": { "regexp": "^$" },
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".",
            "endsPattern": "Ready|started|compiled|Local:|âœ“"
          }
        },
        "runOptions": {
          "instanceLimit": 1,
          "reevaluateOnRerun": true
        },
        "presentation": {
          "reveal": "always",
          "panel": "dedicated",
          "showReuseMessage": false,
          "clear": true
        },
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }
  